{
    "version": 7,
    "constants": {
        "@background": "#808080",
        "@road": "#ff0000",
        "@water": "#0000ff"
    },
    "sources": {
        "osm_roads": {
            "type": "vector",
            "tiles": [
                "http://localhost:8081/desktop/lichtenstein/{z}/{x}/{y}.pbf"
            ],
            "minzoom": 0,
            "maxzoom": 12
        }
    },
    "layers": [
        {
            "id": "background",
            "style": {
                "background-color": "#fff"
            },
            "type": "background"
        },
        {
            "id": "roads",
            "type": "line",
            "source": "osm_roads",
            "source-layer": "roads",
            "paint": {
                "line-color": "@road"
            }
        },
        {
            "id": "water",
            "source": "osm_roads",
            "style": {
                "fill-color": "@water"
            },
            "type": "fill"
        }
    ]
}
